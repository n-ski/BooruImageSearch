<rui:ReactiveUserControl
    x:Class="ImageSearch.WPF.Views.QueueItemView"
    x:TypeArguments="vm:QueueItemViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rui="http://reactiveui.net"
    xmlns:vm="clr-namespace:ImageSearch.ViewModels;assembly=ImageSearch.Core"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">

    <ItemsControl
        x:Name="SearchResultsItemsControl"
        Margin="{StaticResource MarginMedium}">

        <ItemsControl.ItemsPanel>

            <ItemsPanelTemplate>

                <WrapPanel
                    HorizontalAlignment="Center" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
    </ItemsControl>
</rui:ReactiveUserControl>
