<rui:ReactiveUserControl
    x:Class="ImageSearch.WPF.Views.SearchServiceView"
    x:TypeArguments="vm:SearchServiceViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rui="http://reactiveui.net"
    xmlns:vm="clr-namespace:ImageSearch.ViewModels;assembly=ImageSearch.Core"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">

    <StackPanel Orientation="Horizontal">

        <Image
            x:Name="ServiceIcon"
            Width="16"
            Height="16"
            Margin="0,0,4,0" />

        <TextBlock x:Name="ServiceName" />
    </StackPanel>
</rui:ReactiveUserControl>
