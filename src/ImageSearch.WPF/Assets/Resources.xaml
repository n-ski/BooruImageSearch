    <!--#region Margins-->

    <Thickness
        x:Key="MarginSmall"
        Bottom="2"
        Left="2"
        Right="2"
        Top="2" />

    <Thickness
        x:Key="MarginMedium"
        Bottom="4"
        Left="4"
        Right="4"
        Top="4" />
