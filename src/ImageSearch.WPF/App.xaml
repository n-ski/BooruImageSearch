<Application
    x:Class="ImageSearch.WPF.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="Views/MainView.xaml">

    <Application.Resources>

        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary
                    Source="./Assets/Styles/Path.xaml" />
                <ResourceDictionary
                    Source="./Assets/Resources.xaml" />
                <ResourceDictionary
                    Source="./Assets/Styles/Button.xaml" />
                <ResourceDictionary
                    Source="./Assets/Styles/ButtonSpinner.xaml" />
                <ResourceDictionary
                    Source="./Assets/Styles/ItemsControl.xaml" />
                <ResourceDictionary
                    Source="./Assets/Styles/ProgressBar.xaml" />
                <ResourceDictionary
                    Source="./Assets/Styles/RepeatButton.xaml" />
                <ResourceDictionary
                    Source="./Assets/Styles/TextBlock.xaml" />
                <ResourceDictionary
                    Source="./Assets/Styles/WatermarkTextBox.xaml" />
                <ResourceDictionary
                    Source="./Assets/Styles/NumericUpDown.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
